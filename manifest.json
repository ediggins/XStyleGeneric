{
  "manifest_version": 2,
  "background": {
	"scripts": ["background.js"]
  },
  "icons": { "16": "icon_x_16.png",
           "48": "icon_x_48.png",
          "128": "icon_x_128.png" },
  "content_scripts": [
    {
      "matches": ["http://*/*.xml", "https://*/*.xml", "file:///*.xml"],
      "js": ["content-script.js"]
    }
  ],
  "name": "Generic XSLT",
  "description": "This extension applies a generic style to any XML file",
  "version": "1.0",
  "web_accessible_resources":
  [
    "style.xslt"
  ],
  "permissions": [ "contextMenus"]
}
